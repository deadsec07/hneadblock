{
  "manifest_version": 3,
  "name": "YouTube™ Ad Blocker (Stealth & Aggressive) - HNE",
  "description": "Block YouTube™ prerolls with Stealth (mute+skip) or Aggressive (network rules). Lightweight and privacy-friendly.",
  "short_name": "Youtube Ad Blocker",
  "version": "1.0.2",
  "action": {
    "default_title": "Youtube Ad Blocker",
    "default_popup": "popup.html"
  },
  "background": { "service_worker": "background.js" },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*", "*://youtube.com/*", "*://m.youtube.com/*",
    "*://*.doubleclick.net/*",
    "*://*.googlesyndication.com/*", "*://pagead2.googlesyndication.com/*",
    "*://*.googleapis.com/*", "*://*.gstatic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://youtube.com/*", "*://m.youtube.com/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      { "id": "ruleset_1", "enabled": false, "path": "rules/ruleset_1.json" }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["stubs/ima3_stub.js", "stubs/empty.xml", "stubs/empty.js"],
      "matches": [
        "*://*.youtube.com/*", "*://youtube.com/*", "*://m.youtube.com/*",
        "*://*.doubleclick.net/*", "*://*.googlesyndication.com/*",
        "*://*.googleapis.com/*", "*://*.gstatic.com/*"
      ]
    }
  ]
}
